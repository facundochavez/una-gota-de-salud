---
import Layout from '@/layouts/Layout.astro';
import ParallaxHero from '@/components/ParallaxHero.astro';
import LaGotaStory from '@/sections/quienes-somos/LaGotaStory.astro';
import ParallaxFooter from '@/components/ParallaxFooter.astro';
---

<Layout title='Una Gota de Salud | Quiénes somos'>
  <ParallaxHero
    title='Quiénes somos'
    description='Llevamos más de quince años ayudando a mejorar la salud de personas en situación de vulnerabilidad en parajes remotos del noroeste de Córdoba.'
    image='/media/quienes-somos/hero.webp'
    alt='Médica atendiendo a paciente en rancho'
    objectPosition='50'
  />
  <LaGotaStory />

  <ParallaxFooter
    imageSrc='/media/quienes-somos/footer.webp'
    alt='Paisaje de la provincia de Córdoba al atardecer'
    title='No necesitás ser un profesional de la salud para ayudar'
    firstButtonHref='/formas-de-ayudar'
    secondButtonHref='/voluntariado'
    firstButtonLabel='Formas de ayudar  →'
    secondButtonLabel='Ser voluntario/a  →'
  />
</Layout>
