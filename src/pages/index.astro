---
import Layout from '@/layouts/Layout.astro';
import Hero from '@/sections/inicio/Hero.astro';
import About from '@/sections/inicio/About.astro';
import Statistics from '@/sections/inicio/Statistics.astro';
import HelpAreasCarousel from '@/sections/inicio/HelpAreasCarousel.astro';
import Map from '@/sections/inicio/Map.astro';
import Needs from '@/sections/inicio/Needs.astro';
import GalleryCarousel from '@/sections/inicio/GalleryCarousel.astro';
import Carousel from '@/sections/inicio/Carousel.astro';
import CTAs from '@/components/CTAs.astro';
import ParallaxFooter from '@/components/ParallaxFooter.astro';
---

<Layout title='Una Gota de Salud | ONG de asistencia sanitaria'>
  <Hero />
  <About />
  <Statistics />
  <HelpAreasCarousel />
  <Map />
  <Needs />
  <GalleryCarousel />
  <Carousel />
  <CTAs
    title='Cada acción cuenta. Ayudanos a ayudar.'
    firstButtonHref='/formas-de-ayudar'
    firstButtonLabel='Formas de ayudar  →'
    secondButtonHref='/voluntariado'
    secondButtonLabel='Ser voluntario/a  →'
    pt={8}
    pb={40}
  />
  <ParallaxFooter
    imageSrc='/media/inicio/footer.webp'
    alt='Caravana de autos de Una Gota de Salud'
    title='Llevamos esperanza\n\nen cada viaje'
    secondButtonHref='/que-hacemos'
    secondButtonLabel='Ver actividades  →'
    align='right'
    maxChars={15}
  />
</Layout>
