---
interface Props {
  href: string;
  variant?: 'primary' | 'secondary';
  class?: string;
}

const { href, variant = 'primary', class: className = '' } = Astro.props;

const baseStyles = 'px-6 py-2 rounded-md transition-colors text-lg font-medium hover:opacity-70 inline-block whitespace-nowrap';
const variantStyles = {
  primary: 'bg-primary text-white',
  secondary: 'border-2 border-primary text-primary',
};
---

<a href={href} class:list={[baseStyles, variantStyles[variant], className]}>
  <slot />
</a>
