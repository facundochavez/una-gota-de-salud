---
interface Props {
  id: string;
  title: string;
  summary: string;
}

const { id, title, summary } = Astro.props;
import Button from './Button.astro';
---

<li class='w-[22rem] flex-shrink-0'>
  <article class='flex flex-col gap-6'>
    <h3 class='text-3xl font-medium'>{title}</h3>
    <div class='relative w-full aspect-[6/5] rounded-lg overflow-hidden'>
      <img src={`/media/inicio/help-${id}.webp`} alt={`Área de ${title}`} class='w-full h-full object-cover' />
    </div>
    <div class='flex flex-col gap-2'>
      <p class='text-lg leading-6'>{summary}</p>
    </div>
    <Button href={`/que-hacemos#${id}`} class='self-start'> Ver más &nbsp;→ </Button>
  </article>
</li>
